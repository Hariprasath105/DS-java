public class SumOfSquares {
    public static int sumOfSquares(int number) {
        int result = 0;
        while (number > 0) {
            int digit = number % 10;
            result += digit * digit;
            number /= 10;
        }
        return result;
    }

    public static void main(String[] args) {
        int sqdnumber = 234;
        int sqdNumber_result = sumOfSquares(sqdnumber);
        System.out.println("Sum of Squares = " + sqdNumber_result);
    }
}
